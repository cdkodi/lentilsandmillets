# AI Service Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=ant-your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-gemini-api-key-here
AI_MODEL_PRIMARY=gpt-4
AI_MODEL_FALLBACK=gpt-3.5-turbo
AI_MODEL_SUMMARIZATION=gemini-2.5-pro-preview-06-05

# Service Configuration  
FASTAPI_HOST=localhost
FASTAPI_PORT=8000
FASTAPI_DEBUG=true

# Database Configuration (MUST match your main app database)
# Copy this from your main app's .env file
DATABASE_URL=postgresql://username:password@host:port/database

# Security
JWT_SECRET_KEY=your-strong-jwt-secret-key-here
CORS_ORIGINS=http://localhost:3000,https://lentilsandmillets.com

# Cost Management and Rate Limiting
MAX_TOKENS_PER_REQUEST=4000
DAILY_COST_LIMIT=50.00
RATE_LIMIT_PER_MINUTE=10

# Content Generation Defaults
DEFAULT_ARTICLE_LENGTH=1500
DEFAULT_RECIPE_SERVINGS=4
DEFAULT_BRAND_VOICE=authoritative_approachable

# Logging
LOG_LEVEL=INFO

# Development Settings
DEV_MODE=true